{
  "name": "tolgee",
  "displayName": "tolgee",
  "description": "Get autocompletion for your tolgee workspace",
	"repository": {
		"type": "git",
		"url": "https://github.com/eweren/vscode-tolgee.git"
	},
	"publisher": "THEARC",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.67.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:tsx",
    "onLanguage:ts",
    "onLanguage:jsx",
    "onLanguage:js",
    "onLanguage:svelte",
    "onLanguage:html",
		"onStartupFinished"
  ],
	"icon": "tolgeeLogo.png",
  "main": "./out/extension.js",
  "contributes": {
    "commands": [],
    "configuration": {
      "title": "Tolgee",
      "properties": {
        "tolgee.apiUrl": {
          "type": "string",
          "default": "https://app.tolgee.io",
          "description": "The URL of the tolgee instance."
        },
        "tolgee.apiKey": {
          "type": "string",
          "default": null,
          "description": "The API-key that should be used."
        },
				"tolgee.language": {
					"type": "string",
					"default": "en",
					"description": "The language to use for the tolgee instance."
				}
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.67.0",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.16.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.2"
  },
  "dependencies": {
    "@tolgee/core": "^4.7.0"
  }
}
